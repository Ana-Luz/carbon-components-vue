{
  "name": "@carbon/vue-3",
  "version": "0.5.0",
  "private": true,
  "scripts": {
    "serve": "start-storybook -p 6006",
    "build": "vue-cli-service build --target lib --name carbon-vue-3 ./src/index.js --no-clean",
    "format": "prettier --write '**/*.{scss,css,js,md,vue}' '!**/{build,es,lib,storybook,ts,umd,.coverage}/**'",
    "format:diff": "prettier --list-different '**/*.{scss,css,js,md,vue}' '!**/{dist,storybook-static,.coverage}/**'",
    "format:staged": "prettier --write '**/*.{scss,css,js,md,vue}' '!**/{dist,storybook-static,.coverage}/**'",
    "lint:css": "stylelint '{packages,storybook}/**/*.{vue,scss}'",
    "lint:es": "eslint {packages,storybook}/**/*.{js,vue}",
    "lint:style": "vue-cli-service lint:style",
    "test:unit": "vue-cli-service test:unit",
    "lint": "vue-cli-service lint",
    "storybook": "start-storybook -p 6006 --no-manager-cache",
    "build-storybook": "build-storybook"
  },
  "dependencies": {
    "@carbon/icons-vue": "10.56.0",
    "@carbon/layout": "^10.37.1",
    "@carbon/themes": "^10.55.0",
    "@carbon/type": "^10.45.0",
    "@vueuse/core": "^4.11.2",
    "carbon-components": "^10.58.0",
    "core-js": "^3.25.0",
    "flatpickr": "^4.6.13",
    "stylelint-config-property-sort-order-smacss": "^7.1.0",
    "stylelint-config-sass-guidelines": "^7.1.0",
    "vue": "^3.2.37"
  },
  "peerDependencies": {
    "carbon-components": "10.56.0",
    "carbon-icons": "^7.0.7"
  },
  "devDependencies": {
    "@babel/core": "^7.18.13",
    "@storybook/addon-actions": "6.5.10",
    "@storybook/addon-essentials": "6.5.10",
    "@storybook/addon-links": "6.5.10",
    "@storybook/vue3": "6.5.10",
    "@vue/cli-plugin-babel": "~4.5.19",
    "@vue/cli-plugin-eslint": "~4.5.19",
    "@vue/cli-plugin-unit-jest": "~4.5.19",
    "@vue/cli-service": "~4.5.19",
    "@vue/compiler-sfc": "^3.2.37",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/test-utils": "^2.0.2",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.5",
    "copy-webpack-plugin": "^7.0.0",
    "eslint": "^6.8.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-vue": "^8.7.1",
    "postcss-loader": "^5.3.0",
    "prettier": "^1.19.1",
    "sass": "^1.54.5",
    "sass-loader": "^8.0.2",
    "storybook": "^6.5.10",
    "typescript": "~3.9.10",
    "vue-jest": "^5.0.0-alpha.10",
    "vue-loader": "^16.8.3"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended",
      "@vue/prettier"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {},
    "overrides": [
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)",
          "**/tests/unit/**/*.spec.{j,t}s?(x)"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/*/**/*.{js,vue}",
      "!**/node_modules/**",
      "!**/*.stories.js",
      "!**/*.spec.js",
      "!**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 0
      }
    },
    "preset": "@vue/cli-plugin-unit-jest",
    "transform": {
      "^.+\\.vue$": "vue-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!@carbon)"
    ]
  },
  "resolutions": {
    "vue": "^3.2.37",
    "vue-loader": "^16.1.2"
  },
  "files": [
    "/dist",
    "/src"
  ],
  "sideEffects": true
}
