{
  "name": "@carbon/vue-3",
  "version": "0.5.0",
  "private": true,
  "packageManager": "yarn@3.2.0",
  "scripts": {
    "serve": "start-storybook -p 6006",
    "build": "vue-cli-service build --target lib --name carbon-vue-3 ./src/index.js --no-clean",
    "format": "prettier --write '**/*.{scss,css,js,md,vue}' '!**/{build,es,lib,storybook,ts,umd,.coverage}/**'",
    "format:diff": "prettier --list-different '**/*.{scss,css,js,md,vue}' '!**/{dist,storybook-static,.coverage}/**'",
    "format:staged": "prettier --write '**/*.{scss,css,js,md,vue}' '!**/{dist,storybook-static,.coverage}/**'",
    "lint:css": "stylelint '{packages,storybook}/**/*.{vue,scss}'",
    "lint:es": "eslint {packages,storybook}/**/*.{js,vue}",
    "lint:style": "vue-cli-service lint:style",
    "test:unit": "vue-cli-service test:unit",
    "lint": "vue-cli-service lint",
    "storybook": "start-storybook -p 6006 --no-manager-cache",
    "build-storybook": "build-storybook"
  },
  "dependencies": {
    "@carbon/icons-vue": "^10",
    "@carbon/layout": "^10",
    "@carbon/themes": "^10",
    "@carbon/type": "^10",
    "@vueuse/core": "^4",
    "carbon-components": "^10",
    "stylelint-config-property-sort-order-smacss": "^9.0.0",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "vue": "^3.2.33"
  },
  "peerDependencies": {
    "carbon-icons": "^7"
  },
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@storybook/addon-actions": "^6.4.22",
    "@storybook/addon-essentials": "^6.4.22",
    "@storybook/addon-links": "^6.4.22",
    "@storybook/vue3": "^6.4.22",
    "@vue/cli-plugin-babel": "^5.0.4",
    "@vue/cli-plugin-eslint": "^5.0.4",
    "@vue/cli-plugin-unit-jest": "^5.0.4",
    "@vue/cli-service": "^5.0.4",
    "@vue/compiler-sfc": "^3.2.33",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/test-utils": "next",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^28.0.3",
    "babel-loader": "^8.2.5",
    "copy-webpack-plugin": "^10.2.4",
    "eslint": "^8.14.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.7.1",
    "postcss": "^8.4.13",
    "postcss-loader": "^6.2.1",
    "prettier": "^2.6.2",
    "sass": "^1.51.0",
    "sass-loader": "^12.6.0",
    "storybook": "^6.4.22",
    "stylelint": "^14.8.1",
    "typescript": "^4.6.4",
    "vue-loader": "^17.0.0",
    "webpack": "^5.72.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended",
      "@vue/prettier"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {},
    "overrides": [
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)",
          "**/tests/unit/**/*.spec.{j,t}s?(x)"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/*/**/*.{js,vue}",
      "!**/node_modules/**",
      "!**/*.stories.js",
      "!**/*.spec.js",
      "!**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 0
      }
    },
    "preset": "@vue/cli-plugin-unit-jest",
    "transform": {
      "^.+\\.vue$": "vue-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!@carbon)"
    ]
  },
  "resolutions": {
    "vue": "^3.0.0",
    "vue-loader": "^16.1.2"
  },
  "files": [
    "/dist",
    "/src"
  ],
  "sideEffects": true,

}
